{% extends 'base-admin.html.twig' %}

{% block title %}Association{% endblock %}

{% block body %}

<a href="{{ path('admin_association_index') }}" class="btn btn-dark mb-3" >retour a la liste</a>
    <h1>Association</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ association.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ association.adresse }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ association.numero }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ association.mail }}</td>
            </tr>
        </tbody>
    </table>

    

    <div class="d-flex justify-content-around align-items-start">
    {{ include('admin_association/_delete_form.html.twig') }}
    <a href="{{ path('admin_association_edit', {'id': association.id}) }}" class="btn btn-success">edit</a>

    
{% endblock %}
