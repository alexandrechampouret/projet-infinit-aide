{% extends 'base-admin.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
    <h1>Liste Association</h1><br>
    <a href="{{ path('admin_association_new') }}" class="btn btn-warning mb-3">Nouveau</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Numero</th>
                <th>EMail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
        <div class="container">
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.nom }}</td>
                <td>{{ association.adresse }}</td>
                <td>{{ association.numero }}</td>
                <td>{{ association.mail }}</td>
                <td>
                    <a href="{{ path('admin_association_show', {'id': association.id}) }}" class="btn btn-primary me-md-2 md-2 mb-md-0">show</a>
                    <a href="{{ path('admin_association_edit', {'id': association.id}) }}" class="btn btn-success mt-2">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune association de trouver</td>
            </tr>
        </div>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
