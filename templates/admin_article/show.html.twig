{% extends 'base-admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<a href="{{ path('admin_article_index') }}" class="btn btn-dark mb-3">Retour a la liste </a>
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.imagePath }}</td>
            </tr>
            <tr>
                <th>Mise a jour le </th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class="d-flex justify-content-around align-items-start">
    {{ include('admin_article/_delete_form.html.twig') }}
    <a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="btn btn-success">edit</a>
    </div>
{% endblock %}
